<p id="notice"><%= notice %></p>

<h3>Listing Animals</h3>

<table class="table table-sm">
  <thead class="text-center">
    <tr>
      <th>Name</th>
      <th>Age</th>
      <th>Specie</th>
      <th>Breed</th>
      <th>Obs</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody class="text-center">
    <% @animals.each do |animal| %>
      <tr>
        <td><%= animal.name %></td>
        <td><%= animal.age %></td>
        <td><%= animal.specie %></td>
        <td><%= animal.breed %></td>
        <td><%= animal.obs %></td>
        <td><%= link_to 'Show', animal, class: "btn btn-secondary btn-sm btn-block" %></td>
        <td><%= link_to 'Edit', edit_animal_path(animal), class: "btn btn-secondary btn-sm btn-block" %></td>
        <td><%= link_to 'Destroy', animal, class: "btn btn-danger btn-sm btn-block", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Animal', new_animal_path, class: "btn btn-primary" %>
