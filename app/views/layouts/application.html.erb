<!DOCTYPE html>
<html>
<head>
  <title>Bixano</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
</head>
<body>
  
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
    
    <div class="container">
      <a class="navbar-brand mb-0 h1" href="/">Bixano's</a>
      
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
    
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav">
          <li class="nav-item">
            <%= link_to "Animals", animals_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Vets", vets_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Donations", donations_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Admins", admins_path, class: "nav-link" %>
          </li>
          <li class="nav-item">
            <%= link_to "Attendance", new_attendance_url, class: "nav-link" %>
          </li>
        </ul>
      </div>
    
      <% if current_user %>
        <ul class="navbar-nav ml-auto"> 
          <li class="nav-item"><span class="navbar-text"><%= current_user.email %></span></li> 
          <li class="nav-item"><%= link_to "Log out", logout_path, method: "delete", class: "nav-link" %></li> 
        </ul> 
      <% else %> 
        <ul class="navbar-nav ml-auto"> 
          <li class="nav-item"><%= link_to "Login", 'login', class: "nav-link" %></a></li> 
          <li class="nav-item"><%= link_to "Signup", 'signup', class: "nav-link" %></a></li> 
        </ul> 
      <% end %>
    </div>
    
  </nav>
  
  <div class="container">
    <%= yield %>
  </div>

</body>
</html>
